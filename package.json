{
  "name": "@techstack/lexical",
  "author": "The-Code-Monkey",
  "description": "a wrapper for facebook/lexical for react",
  "version": "2.0.11",
  "scripts": {
    "build": "tsc && cp ./src/index.scss ./dist/index.scss",
    "lint": "eslint ./src --fix",
    "test": "jest ./src"
  },
  "license": "MIT",
  "dependencies": {
    "@lexical/code": "0.14.5",
    "@lexical/html": "0.14.5",
    "@lexical/link": "0.14.5",
    "@lexical/list": "0.14.5",
    "@lexical/react": "0.14.5",
    "@lexical/rich-text": "0.14.5",
    "@lexical/selection": "0.14.5",
    "@lexical/table": "0.14.5",
    "@lexical/utils": "0.14.5",
    "@techstack/react-feather": "1.4.87",
    "@types/react-dom": "18.3.0",
    "lexical": "0.14.5",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "styled-components": "6.1.9",
    "typescript": "5.1.6"
  },
  "devDependencies": {
    "@testing-library/react": "^15.0.7",
    "@types/node": "20.12.11",
    "@types/react": "18.3.1",
    "@types/styled-components": "5.1.34",
    "@typescript-eslint/eslint-plugin": "7.8.0",
    "@typescript-eslint/parser": "7.8.0",
    "eslint": "8.57.0",
    "eslint-config-hardcore": "45.6.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-sonar": "0.12.0",
    "eslint-plugin-total-functions": "7.0.7",
    "globals": "15.1.0"
  },
  "main": "./dist/esm/index.js",
  "module": "./dist/esm/index.js",
  "exports": {
    "./editor": {
      "import": "./dist/esm/editor.js",
      "require": "./dist/esm/editor.js"
    },
    "./plugins": {
      "import": "./dist/esm/plugins/index.js",
      "require": "./dist/esm/plugins/index.js"
    },
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/esm/index.js"
    },
    "./css": {
      "import": "./dist/index.scss",
      "require": "./dist/index.scss"
    }
  },
  "typings": "dist/types/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    }
  }
}
